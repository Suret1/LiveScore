<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LiveScore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottomSheetStyle">@style/BottomSheetDialog_Rounded</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BottomSheetDialog_Rounded" >
        <item name="android:background">@drawable/bottom_sheet_bg</item>
    </style>

    <style name="BlueButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/source_sans_pro_semibold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="EditTextStyle">
        <item name="android:background">@drawable/rounded_edit_text</item>
        <item name="android:fontFamily">@font/source_sans_pro</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorHint">@color/mid_grey</item>
        <item name="android:textColor">@color/mid_grey</item>
    </style>



</resources>